@*@page "/food/place"   - this would change the route to this page.  "{id?:int}" - this would add an optional int parameter named "id" (like: /Restirants/Detail/id)*@
@page "{resturantId:int}"

@model OdeToFood.DetailModel
@{
    ViewData["Title"] = "Detail";
}

<h1>@Model.Resturant.Name</h1>
<div>
    Id: @Model.Resturant.Id
</div>
<div>
    Location: @Model.Resturant.Location
</div>
<div>
    Cuisine: @Model.Resturant.Cuisine
</div>

<a asp-page="./List" class="btn btn-light">All Resturants</a>

